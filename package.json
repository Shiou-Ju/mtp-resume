{
  "name": "mtp-resume",
  "version": "1.0.0",
  "description": "MTP file transfer tool with smart resume capability",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "dev": "pnpm --filter @mtp-transfer/cli dev",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "echo 'Linting not yet configured'",
    "clean": "rm -rf packages/*/node_modules packages/*/dist node_modules",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mtp",
    "file-transfer",
    "resume",
    "android",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "happy-dom": "^18.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "uuid": "^11.1.0"
  }
}